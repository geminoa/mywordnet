# coding: utf-8

require 'rake/testtask'

wordnet_uri = "http://nlpwww.nict.go.jp/wn-ja/data/1.1/wnjpn.db.gz"
db_path = "db"
db_archive = "wnjpn.db.gz"
db_name = "wnjpn.db"

desc "init"
task :init do
  `mkdir -p #{db_path}`
  if Dir.glob("#{db_path}/wnjpn.db").size == 0
    `curl -o #{db_archive} #{wordnet_uri}`
    `gunzip #{db_archive}`
    `mv #{db_name} #{db_path}/`
  else
    puts "Already initialized"
  end
end

task :test do
  Rake::TestTask.new do |test|
    test.libs << 'test'
    test.test_files = Dir[ 'test/**/test_*.rb' ]
    test.verbose = true
  end
end
